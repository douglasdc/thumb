{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext"],
        "module": "nodenext",
        "resolveJsonModule": true,
        "allowJs": false,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "moduleResolution": "nodenext"
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.*", "dist"]
}
